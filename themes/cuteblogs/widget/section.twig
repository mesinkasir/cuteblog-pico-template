<section class="row mb-5 p-3"> 
{% if paged_pages %}
{% for page in paged_pages|sort_by("time")|reverse %}
<article class="col-md-4 p-3">   
<a href="{{ page.url }}" class="card p-1">
<div class="card-content p-3">
<div class="text-center p-3">
<img class="img-fluid rounded-circle" alt="{{ page.description }}" width="80" src="{{ meta.img }}"></div>
<h3>{{ page.title }} ✏️</h3>
<p class="date"><small>👧&nbsp; {{ page.author }}&nbsp;⏰ &nbsp;{{ page.date }}</small></p>
<p>📝	{{ page.description }}{{ page.cover }}</p>
</div>
</a>
</article>
{% endfor %}
{% endif %}
</section>